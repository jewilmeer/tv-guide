html {
  background-color: transparent;
}
body {
  padding-top: 40px;
  background-image: url(<%= asset_data_uri "patterns/whitey.png" %>);
  background-attachment: fixed;

}
#main.container {
  background-color: rgba(255,255,255,0.9);
  box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
  padding: 20px 10px;
}
.right-rss {
  float: right;
  margin-top: 8px;
}
span.label a {
  color: white;
}

dl dt, dl dd {
  line-height: 25px;
}
dl dd {
  position: relative;
  border-bottom: 1px solid #ddd;
  .icon.flt-right {
    position: absolute;
    right: 0;
    top: 8px;
  }
}
// dt oneliner (used for downloads and searches)
dl.oneliner {
  margin: 0;
  clear: both;
  dt, dd {
    height: 20px;
    vertical-align: bottom;
  }
  dt {
    display: inline-block;
    padding-bottom: 0;
    &.download, &.search {
      padding-left: 16px;
    }
  }
  dd {
    display: inline-block;
  }
}
dt {
  &.with-icon {
    @extend .default-icon;
    height: 16px;
    padding-left: 20px;
    background-position: 0px 3px;
    padding-bottom: 3px;
  }
  &.download {
    background-image: url(<%= asset_data_uri "icons/combined/16x16/down.png" %>);
    @extend .with-icon;
  }
  &.search {
    background-image: url(<%= asset_data_uri "icons/combined/16x16/search.png" %>);
    @extend .with-icon;
  }

}
.flt-right {
  float: right;
}

#images .images {
  a {
    position: relative;
  }
  img {
    min-width: 210px;
    min-height: 150px;
    width: 210px;
    height: 150px;
    -webkit-transition: -webkit-transform ease 500ms;
    -moz-transition: -moz-transform ease 100ms;
    &.fullsize {
      -webkit-transform: scale(1.1) rotate(-2deg);
      -moz-transform: scale(1.1) rotate(-2deg);
    }
  }
}

#image img {
  max-width: 700px;
}

#program .cover {
  overflow: hidden;
  height: 500px;
  width: 940px;
  background-size: cover;
  background-position: top center;
}
.page_nav {
  .prev {
    text-align: left;
  }
  .next {
    text-align: right;
  }
}
.form-horizontal .content {display:block;margin-left:13em;padding:4px 6px;color:#666;}