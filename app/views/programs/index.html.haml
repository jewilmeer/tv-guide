%section
  .page-header
    %h1
      - if params[:search]
        == Results for #{params[:search]}
      - else
        List all programs

  - if @programs.any?
    %table.table.table-striped#programs
      %thead
        %tr
          %th Program name
          %th First aired
          %th Next episode
          %th Genres
      %tbody
        = render @programs
    = will_paginate @program
  - else
    %p.nothing
      No programs found!
