%h1 Listing users

- if @users.any?
  %table.full_width.list
    %thead
      %tr
        %th Url
        %th Registerd at
        %th Last request
        %th Nr of logins
        %th Nr of programs
        %th.controls
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.login, [user, :programs]
          %td= l user.created_at, :format => :long
          %td= user.last_request_at? ? "#{distance_of_time_in_words_to_now(user.last_request_at)} ago" : '-'
          %td= user.login_count
          %td= pluralize(user.programs.count, 'program')
          %td
            = link_to icon_tag('info'), [:admin, user]
            = link_to icon_tag('page_edit'), edit_admin_user_path(user)
            = link_to icon_tag('delete'), [:admin, user], :confirm => 'Are you sure?', :method => :delete
  
- else
  %p No users yet!
%br

= link_to 'New user', new_admin_user_path
