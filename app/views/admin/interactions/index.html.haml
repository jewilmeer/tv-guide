%section
  .page-header
    %h1
      Interactions
      %small== Current time #{Time.now.to_s(:long)} #{Time.zone}

  - if @interactions.any?
    %table.table.table-striped.table-hover.table-bordered
      %thead
        %tr
          %th User
          %th Program
          %th Episode
          %th Actie
          %th User agent
          %th timestamp
      %tbody= render @interactions
    = will_paginate @interactions
  - else
    %p.nothing No interactions found yet!