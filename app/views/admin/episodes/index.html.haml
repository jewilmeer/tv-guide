- if @program
  = render 'admin/programs/hero', program: @program, nav: @nav
- else
  .page-header
    %h1 All Episodes

- if @episodes.any?
  %table.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        %th Episode title
        %th Airdate
        %td Last updated
        %th Controls
    %tbody
      = render @episodes
  = will_paginate @episodes
- else
  %p.nothing