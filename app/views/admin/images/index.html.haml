%section#images
  .page-header
    %h1 
      - if @program
        == #{link_to @program.name, [:admin, @program]} -
      Images overview

  %ul.media-grid
    - @images.each do |image|
      %li[image]
        = link_to [:admin, image] do
          - if image.image?
            %img.thumbnail{:src => image.image.url(:episode)}
          - else
            %img.thumbnail{:src => "/images/#{image.id}.jpg"}