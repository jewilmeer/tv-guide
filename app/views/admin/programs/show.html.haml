- content_for :hero_unit do
  - banner_url = @program.banner.try(:file).try(:url)
  .hero-unit.teaser{style: "background-image: url(#{banner_url})"}
    %ul.pager
      - if @nav[:next].present?
        %li.previous
          = link_to [:admin, @nav[:next]] do
            == &larr; #{@nav[:next].name}
      - if @nav[:previous].present?
        %li.next
          = link_to [:admin, @nav[:previous]] do
            == #{@nav[:previous].name} &rarr;
    %h1
      = @program.name
      %small
        %ul.nav.nav-pills
          %li= link_to "public", @program
          %li= link_to "admin", [:admin, @program]
          %li= link_to "images", [:admin, @program, :images]

%section#program
  .row-fluid
    .span8
      .page-header
        %h3 Show summary
      %p= @program.overview

      .page-header
        %h3 Important program settings
      = simple_form_for([:admin, @program]) do |f|
        = f.input :name
        = f.input :search_name
        .form-actions
          = f.button :submit, disable_with: 'Please wait...', class: 'btn-primary'

    .span4
      .page-header
        %h3 Show statistics
      %dl
        %dt Nr of episodes
        %dd
          = pluralize( @program.episodes.count, 'episode')
          in
          = pluralize( @program.max_season_nr, 'season')
        %dt First episode aired at
        %dd
          - if first_aired = @program.episodes.order('airs_at').first
            = l(first_aired.airs_at, :format => :long) rescue '-'
          - else
            \-
        %dt Last aired
        %dd
          - if @last_episode
            = @last_episode.airs_at.to_s(:long) rescue '-'
          - else
            \-
        %dt Last episode update
        %dd
          - last_updated_episode = @program.episodes.order('created_at').last
          - if last_updated_episode
            = @program.episodes.by_created_at.last.created_at.to_s(:long) rescue '-'
          - else
            \-
        %dt Created at
        %dd= l @program.created_at, format: :long
        %dt Other options
        %dd= link_to 'Remove', [:admin, :program], :class => [:btn, :danger], :method => :delete, :data => {:'disable-with' => 'Burning episodes...'}

