.page-header
  %h1
    == Listing #{Program.active.count} active programs
    %small== #{Program.inactive.count} inactive

- if @programs.any?
  %table.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        %th Name
        %th Next episode
        %th Status
        %th Last update
        %th Last checked
        %th Controls
    %tbody= render @programs
  = will_paginate @programs
