- cache [episode, episode.aired?] do
  - program ||= episode.program
  %tr[episode]
    %td
      = link_to episode.full_episode_title, program_episode_path(program, episode), :class => :title
      - if episode.aired?
        .actions= render 'episodes/trusted_actions', episode: episode
    %td{:width => 220}
      - if episode.airs_at
        %p= pretty_date episode.airs_at.to_date, :with_year => true
        .admin-actions
          - if episode.aired?
            = link_to('Redownload', episode_path(episode, :partial => :episodes), :method => :put, :remote => true, :disable_with => 'loading...', :class => 'btn small')
      - else
        \-
